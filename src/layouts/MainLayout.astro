---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title} | Project Management</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }
            nav {
                background-color: #333;
                color: white;
                padding: 1rem;
            }
            nav a {
                color: white;
                text-decoration: none;
                margin-right: 1rem;
            }
            main {
                flex-grow: 1;
                padding: 1rem;
            }
        </style>
    </head>
    <body>
        <nav>
            <a href="/">Home</a>
            <a href="/projects">Projects</a>
            <a href="/users">Users</a>
            <a href="/logout">Logout</a>
        </nav>

        <main>
            <slot />
        </main>
    </body>
</html>
